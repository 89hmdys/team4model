<script type="text/javascript">
    dojo.addOnLoad(function(){
        BugTopicManager.init();
    });	
</script>
<h1>Editing bug</h1>

<% remote_form_for(@bug,
	:success => "BugTopicManager.publish('#{@bug.id}')") do |f| %>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 10 %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.select(:status, Bug::Statuses) %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', bugs_path %>
